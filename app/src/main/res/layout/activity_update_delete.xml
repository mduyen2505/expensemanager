<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:background="@drawable/savingmoney">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="CHỈNH SỬA CHI TIÊU"
            android:fontFamily="sans-serif-black"
            android:textSize="30dp"
            android:textStyle="italic"
            android:layout_marginTop="-170dp"
            android:textColor="@color/white"
            android:gravity="center">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:orientation="vertical"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-50dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/bg_timkiem"
        >
        <EditText
            android:layout_width="370dp"
            android:layout_height="45dp"
            android:id="@+id/Title"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:background="@drawable/bogoc"
            android:hint="Nhập tiêu đề"/>
        <Spinner
            android:layout_width="370dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:spinnerMode="dropdown"
            android:id="@+id/SpinderCategory"/>
        <EditText
            android:layout_width="370dp"
            android:layout_height="45dp"
            android:id="@+id/Price"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:background="@drawable/bogoc"
            android:hint="Nhập giá "/>
        <EditText
            android:layout_width="370dp"
            android:layout_height="45dp"
            android:id="@+id/Date"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:background="@drawable/bogoc"
            android:hint="Chọn ngày"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="-350dp">
        <Button
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:id="@+id/btUpdate"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:background="@drawable/button"
            android:text="Update"/>
        <Button
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:id="@+id/btRemove"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:background="@drawable/button_remove"
            android:text="Remove"/>
        <Button
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:id="@+id/btBack"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button"
            android:textSize="20dp"
            android:text="Back"/>


    </LinearLayout>

</LinearLayout>